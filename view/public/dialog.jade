extend ../theme
block append head-link
    link(rel='stylesheet', href='/organization/css/public/dialog.css')

    .content-wrapper
        h1 WELCOME #{user.name}
        h2 AUTHORIZATION REQUIRED
        p Mobile app would like to connect to your account
        p Do you approve?
        form(action='/api/dialog/authorize/decision', method='post')
            input(type='hidden', name="transaction_id", value="#{transactionID}")
            input(type='submit', class='button', value='Allow', id="allow")
            input(type='submit', class='button',  value='Deny', id="deny")
